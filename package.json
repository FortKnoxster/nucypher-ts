{
  "name": "nucypher-ts",
  "author": "Piotr Roslaniec",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/nucypher-ts.esm.js",
  "scripts": {
    "start": "tsdx watch",
    "build": "yarn build:umbral:bundler && tsdx build",
    "build:umbral": "(cd rust-umbral/umbral-pre-wasm && make clean && make",
    "build:umbral:bundler": "(cd rust-umbral/umbral-pre-wasm && make clean && make TARGET=bundler) && yarn check:umbral",
    "build:umbral:nodejs": "(cd rust-umbral/umbral-pre-wasm && make clean && make TARGET=nodejs) && yarn check:umbral",
    "check:umbral": "yarn add --check-files ./rust-umbral/umbral-pre-wasm/pkg",
    "test": "yarn build:umbral:nodejs && tsdx test --detectOpenHandles",
    "lint": "tsdx lint",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.11.0",
    "@types/axios": "^0.14.0",
    "@types/jest": "^26.0.23",
    "husky": "^6.0.0",
    "size-limit": "^4.11.0",
    "ts-jest": "^27.0.3",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typechain": "^5.1.1"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "ethers": "^5.3.1",
    "keccak256": "^1.0.2",
    "secure-random": "^1.1.2",
    "umbral-pre": "./rust-umbral/umbral-pre-wasm/pkg"
  },
  "files": [
    "dist",
    "src"
  ],
  "size-limit": [
    {
      "path": "dist/nucypher-ts.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/nucypher-ts.esm.js",
      "limit": "10 KB"
    }
  ],
  "engines": {
    "node": ">=10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
